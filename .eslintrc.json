{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "extends": ["airbnb-base"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-console": "off",
    "import/extensions": "off",
    "curly": ["error", "all"],
    "consistent-return": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "req|res|next" }]
  },
  "overrides": [
    {
        "files": ["*.test.js"],
        "rules": {
            "no-unused-expressions": "off"
        }
    }
  ]
}
